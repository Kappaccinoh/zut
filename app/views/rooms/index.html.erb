<div class="container">
    <h1>Zut</h1>
    <h2>How to Play</h2>
    <p>TODO:</p>

    <hr>

    <h2>Users Online</h2>
    <div><%= @current_user.username %> (you)</div>
    <%= turbo_stream_from "users" %>
    <div id="users">
        <%= render @users %>
    </div>

    <br>

    <h2>Joined Rooms</h2>
    <% if @has_joined_rooms %>
        <ul>
            <% @joined_rooms.each do |j| %>
                <li><%= link_to "#{j.name}", room_path(j) %></li>
            <% end %>
        </ul>
    <% else %>
        <h3>None Joined</h3>
        <!-- Click here to join a random room -->
    <% end %>

    <hr>

    <h2>All Rooms</h2>
    <%= turbo_stream_from "rooms" %>
    <div id="rooms">
        <%= render @rooms %>
    </div>
    
    <br>

    <h3>Create A Room</h3>
    <%= render partial: "layouts/new_room_form" %>
    
</div>