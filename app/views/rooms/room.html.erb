<div class="container vh-100 bg-dark">
    <% if @single_room %>
        <h1><%= @single_room.name %></h1>
        <h2>Created by: <%= @single_room.user.username %> </h2>
    <% end %>

    <%= turbo_stream_from @single_room %>
    <div id="messages">
        <%= render @messages %>
    </div>
    <%= render partial: 'layouts/new_message_form' %>
</div>